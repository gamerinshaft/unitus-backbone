.profilebar
  h1.profile_name
    i.glyphicon.glyphicon-chevron-right
    = dashboard.get("Name")
  img(src="#{dashboard.get('AvatarUri')}")

  #accordion.panel-group(role='tablist', aria-multiselectable='true')
    .panel.panel-default
      #profileAccordion.panel-heading(role='tab')
        h4.panel-title
          a(data-toggle='collapse', data-parent='#accordion', href='#profileCollapse', aria-expanded='false', aria-controls='profileCollapse')
            i.glyphicon.glyphicon-chevron-right
            | 基本情報
      #profileCollapse.panel-collapse.collapse(role='tabpanel', aria-labelledby='profileAccordion')
        ul.list-group(role='tablist')
          li.list-group-item(data-js="sendMail")
            i.fa.fa-envelope-o
            = dashboard.get("UserName")
    .panel.panel-default
      #achievementAccordion.panel-heading(role='tab')
        h4.panel-title
          a.collapsed(data-toggle='collapse', data-parent='#accordion', href='#achivementCollapse', aria-expanded='false', aria-controls='achivementCollapse')
            i.glyphicon.glyphicon-chevron-right
            | 実績
      #achivementCollapse.panel-collapse.collapse(role='tabpanel', aria-labelledby='achievementAccordion')
        ul.list-group(role="tablist")
          for categoryName, index in dashboard.get("AchivementCategories")
            a(data-js="achivementCategory", href="#userAchivement", area-controls="userAchivement")
              li.list-group-item
                = categoryName
    .panel.panel-default
      #accountAccordion.panel-heading(role='tab')
        h4.panel-title
          a.collapsed(data-toggle='collapse', data-parent='#accordion', href='#accountCollapse', aria-expanded='false', aria-controls='accountCollapse')
            i.glyphicon.glyphicon-chevron-right
            | 各種アカウント
      #accountCollapse.panel-collapse.collapse(role='tabpanel', aria-labelledby='accountAccordion')
        ul.list-group(role="")
          li.list-group-item
            | hoge
          li.list-group-item
            | hoge
          li.list-group-item
            | hoge
.panels
  #userAchivement.panelcontent.tab-pane.fade(role="tabpanel", data-js='achivementList')
    .row
      .col-xs-12
        .title.text-center
          | 実績一覧
          span(data-js="categoryName")
      .col-xs-12(data-js="badges")
    #achivementPanel.hidden_panel_r(data-js="achivementPanel")
