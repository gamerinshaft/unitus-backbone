section#main(role='tabpanel')
  section#header(data-js="header")
    h1.text-center(data-js='logoTitle') UNITUS
    .dropdown
      #account(data-js='dropdown', data-toggle="dropdown")
          | Junpei Taneichi
          span.caret
      ul.dropdown-menu(role='menu', aria-labelledby='account')
        // (管理者用ここから)
        li.author.menu 管理者メニュー
        li.item(data-js='open_admin') 管理画面を開く
        li.divider
        // (管理者用ここまで)
        li.author.menu アカウントメニュー
        li.item 設定
        li.divider
        li.item(data-js='logout') ログアウト
        li.divider

  section#body
    section#basicUser(data-js="basic")
      #userSidebar.sidebar
        // Nav tabs
        ul.nav.nav-tabs(role='tablist')
          li.active(role='presentation')
            a(href='#circles', aria-controls='circles', role='tab', data-toggle='tab')
              i.glyphicon.glyphicon-th
              span.title 加盟団体一覧
          li(role='presentation')
            a(href='#mail', aria-controls='mail', role='tab', data-toggle='tab')
              i.glyphicon.glyphicon-envelope
              span.title 部員招待
          li(role='presentation')
            a(href='#profile', aria-controls='profile', role='tab', data-toggle='tab')
              i.glyphicon.glyphicon-user
              span.title プロフィール
      #userContent.content
        .tab-content
          #circleList.tab-pane.fade.in.active(role='tabpanel')
            h1 加盟団体一覧
            table
              thead
                tr
                  th.name_w 名前
                  th.author_w 権限
                  th.number_w 人数
                  th.university_w 大学名
                  th.update_w 更新日
              tbody
                tr.self
                  td.name.name_w
                    | 応用数学研究部
                    a(href='#1')
                      i.glyphicon.glyphicon-edit
                  td.author.author_w 編集者
                  td.number.number_w 28
                  td.university.university_w 東京理科大学
                  td.update.update_w 2014年2月1日
                tr
                  td.name.name_w
                    | EspicaCompute
                    a(href='#1')
                      i.glyphicon.glyphicon-eye-open
                  td.author.author_w 閲覧者
                  td.number.number_w 44
                  td.university.university_w 東京理科大学
                  td.update.update_w 2014年2月1日
                tr
                  td.name.name_w
                    | EspicaCompute
                    a(href='#1')
                      i.glyphicon.glyphicon-eye-open
                  td.author.author_w 閲覧者
                  td.number.number_w 44
                  td.university.university_w 東京理科大学
                  td.update.update_w 2014年2月1日
                tr
                  td.name.name_w
                    | EspicaCompute
                    a(href='#1')
                      i.glyphicon.glyphicon-eye-open
                  td.author.author_w 閲覧者
                  td.number.number_w 44
