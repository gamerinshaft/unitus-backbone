#adminSidebar.sidebar
  ul.nav.nav-tabs(role='tablist')
    li.active(role='presentation')
      a(href='#adminNewCircle', aria-controls='adminNewCircle', role='tab', data-toggle='tab')
        i.glyphicon.glyphicon-plus
        span.title 新規団体追加
    li(role='presentation')
      a(href='#adminUserList', aria-controls='adminUserList', role='tab', data-toggle='tab')
        i.glyphicon.glyphicon-th-list
        span.title ユーザー一覧
#adminContent.content
  .tab-content
    #adminNewCircle.tab-pane.fade.in.active(role='tabpanel')
      h1
        | 新規団体追加
        .label.label-default(data-js='markdown') プレビュー
      form
        .form-group
          label(for='circle_name') 団体名
          input#circle_name.form-control(type='text', placeholder='応用数学研究部')
          label(for='circle_description') 団体説明を記入
          textarea#circle_description.form-control(placeholder='団体説明を記入', rows='10')
          label(for='circle_num') 人数
          input#circle_num.form-control(type='text', placeholder='18')
          label(for='site_name') ウェブサイト
          input#site_name.form-control(type='text', placeholder='http://unitus-ac.com')
          label(for='university') 所属大学
          input#university.form-control(type='text', placeholder='東京理科大学')
          label(for='remarks') 備考
          textarea#remarks.form-control(placeholder='インカレサークルです。')
          label(for='contact') 連絡先
          input#contact.form-control(type='text', placeholder='Tel: 090123456')
          label(for='leader') 代表者
          input#leader.form-control(type='text', placeholder='@hogehoge')
          .checkbox
            label
              input#isAcceptOutside(type='checkbox')
              |  外部生のサークル加入可否
          .pull-right
            button.btn.btn-primary(type='submit') 保存する
          .clear

    #adminUserList.tab-pane.fade(role='tabpanel')
      h1 ユーザー一覧
      table
        thead
          tr
            th.name_w 名前
            th.author_w 権限
            th.number_w 学年
            th.university_w 所属大学
            th.mail_w メールアドレス
        tbody(data-js='userList')
#adminOptionbar
  .close_btn(data-js='close_admin')
    .glyphicon.glyphicon-remove

