        text: '達成率の推移グラフ',
        x: -20
      },
      subtitle: {
        text: '12日前~現在',
        x: -20
      },
      xAxis: {
        categories: ["2月12日", "2月13日", "2月14日", "2月15日", "2月16日", "2月17日", "2月18日", "2月19日", "2月20日", "2月21日", "2月22日", "2月23日"]
      },
      yAxis: {
        title: {
          text: '人数 (人)'
        },
        plotLines: [
          {
            value: 0,
            width: 1,
            color: '#888'
          }
        ]
      },
      tooltip: {
        valueSuffix: '人'
      },
      legend: {
        layout: 'vertical',
        align: 'right',
        verticalAlign: 'middle',
        borderWidth: 0
